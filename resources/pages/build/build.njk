{% extends "layouts.njk" %}

{# Setting #}
{% set title = 'Title' %}
{% set breadcrumbItems =[ { name: 'Base' }, { name: title} ] %}
{% set headerTitle = title %}
{% set headerText = 'Lorem ipsum dolor, sit amet consectetur adipisicing elit.' %}

{# Title #}
{% block title %}
    {{ title }}
{% endblock %}

{# Content #}
{% block content %}

    {# breadcrumb #}
    {{ breadcrumb.block(breadcrumbItems) }}

    {# header #}
    {{ header.block(headerTitle, headerText) }}

    {# card columns custom #}
    <section>
        <div class="row">
            <div class="col">
                <div class="card">
                    <div class="card-header">header</div>
                    <div class="card-body">body</div>
                    <div class="card-footer">footer</div>
                </div>
            </div>
        </div>
    </section>             
    
{% endblock %}